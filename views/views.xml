<odoo>
    <record id="res_partner_pure_fitness" model="ir.ui.view">
        <field name="name">res_partner_pure_fitness</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <notebook>
                <page string="Client Information">
                    <group>
                        <field name="plan"/>
                        <field name="price"/>                        
                        <field name="paid_amount"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="total_due"/>
                        <hr/>
                        <field name="due"/>
                        <field name="due_amount"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
